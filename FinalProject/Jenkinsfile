        echo "Running tests..."
        // כאן אפשר להריץ unit tests או integration tests
        // sh "pytest tests/" או sh "npm test"
=======
        sh "helm lint ${HELM_CHART}"
>>>>>>> 5de9a116e908dc8c64f80c998d2650b1c1032940
      }
    }

    stage('Lint Helm Chart') {
      steps {
        sh "helm lint ${HELM_CHART}"
      }
    }

    stage('Deploy') {
      steps {
        echo "Deploying to Kubernetes..."
        sh """
          helm upgrade --install ${APP_NAME} ${HELM_CHART} \
            --namespace ${NAMESPACE} \
            --create-namespace
        """
      }
    }
  }

  post {
    always {
      echo "Pipeline finished"
    }
    success {
      echo "Pipeline succeeded ✅"
    }
    failure {
      echo "Pipeline failed ❌"
    }
  }
}

