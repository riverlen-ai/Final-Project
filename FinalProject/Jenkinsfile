pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccount: 'jenkins'
  containers:
  - name: helm
    image: alpine/helm:3.14.0
    command:
      - cat
    tty: true
    stdin: true
"""
      defaultContainer 'helm'
    }
  }

  environment {
    APP_NAME   = "final-project"
    HELM_CHART = "FinalProject/helm/final-project"
    NAMESPACE  = "default"
  }

  stages {

