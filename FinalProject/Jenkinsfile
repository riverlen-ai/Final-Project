    stage('Debug') {
      steps {
        sh '''
          echo "=== DEBUG ==="
          pwd
          ls -la
          echo "--- helm dir ---"
          ls -la helm || true
          helm version
        '''
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
