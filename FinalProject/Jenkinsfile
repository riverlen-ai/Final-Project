pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: helm
    image: alpine/helm:3.14.0
    command:
    - cat
    tty: true
"""
      defaultContainer 'helm'
    }
  }

  environment {
    APP_NAME   = "final-project"
    HELM_CHART = "helm/final-project"
    NAMESPACE  = "default"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/riverlen-ai/Final-Project.git'
      }
    }

    stage('Helm Lint') {
      steps {
        sh 'helm version'
        sh 'helm lint ${HELM_CHART}'
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        sh """
          helm upgrade --install ${APP_NAME} ${HELM_CHART} \
            --namespace ${NAMESPACE} \
            --create-namespace
        """
      }
    }
  }
}

