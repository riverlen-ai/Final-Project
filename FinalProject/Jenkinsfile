pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: helm
    image: alpine/helm:3.14.0
    command:
      - cat
    tty: true
"""
      defaultContainer 'helm'
    }
  }

  environment {
    APP_NAME   = "final-project"
    HELM_CHART = "helm/final-project"
    NAMESPACE  = "default"
  }

  stages {

    stage('Debug') {
      steps {
        sh '''
          echo "=== DEBUG ==="
          pwd
          ls -la
          echo "--- helm dir ---"
          ls -la helm || true
          helm version
        '''
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Helm Lint') {
      steps {
        sh "helm lint ${HELM_CHART}"
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        sh """
          helm upgrade --install ${APP_NAME} ${HELM_CHART} \
            --namespace ${NAMESPACE} \
            --create-namespace
        """
      }
    }
  }

  post {
    success {
      echo "✅ Pipeline finished successfully"
    }
    failure {
      echo "❌ Pipeline failed – check logs above"
    }
  }
}

